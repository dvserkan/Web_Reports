@model List<Web_Reports.Entities.OrderHeader>
@{
    ViewData["Title"] = "DashboardIndex";
    Layout = "~/Views/Shared/_WebReport.cshtml";
    string durum = null;
}

<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="row">
            <div class="col-12 col-xl-8 mb-4 mb-xl-0">
                <h3 class="font-weight-bold">Hoşgeldiniz !</h3>
                <br />
                <h4 class="font-weight-normal mb-0">

                    Merkezi Raporlama Platformu Nedir ; <br />
                    <br />
                    Merkezi Raporlama Platformu S.Ç yazılım tarafından şubeli restoranlar için geliştirilmiş detaylı bir raporlama sistemidir.
                    Restorantlarınızın anlık satışlarını , anlık envanter durumlarını v.b birçok rapora internete çıkabildiğiniz herhangi bir cihazdan ulaşabilmenizi sağlamaktadır.
                    <span class="text-primary"></span>

                </h4>
            </div>
            <div class="col-12 col-xl-4">
                <div class="justify-content-end d-flex">
                    <div class="dropdown flex-md-grow-1 flex-xl-grow-0">
                        <button class="btn btn-sm btn-light bg-white dropdown-toggle" type="button" id="dropdownMenuDate2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                            <i class="mdi mdi-calendar"></i> @DateTime.Now.ToString("dd-MM-yyy")
                        </button>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card tale-bg">
            <div class="card-people mt-auto">
                <img src="~/skydash/images/dashboard/people.svg" alt="people">
                <div class="weather-info">
                    <div class="d-flex">
                        <div>
                            <h2 class="mb-0 font-weight-normal"><i class="icon-sun mr-2"></i>@ViewBag.v5<sup>C</sup></h2>
                        </div>
                        <div class="ml-2">
                            <h4 class="location font-weight-normal">İstanbul</h4>
                            <h6 class="font-weight-normal">Türkiye</h6>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card tale-bg ml-4">
            <div class="card-people mt-auto">
                <table class="table table-bordared">
                    <h3 class="ml-3 mb-3">En Son Açılan Açık Adisyonlar</h3>
                    <tr>
                        <th>Çek No</th>
                        <th>Tarih</th>
                        <th>Tutar</th>
                        <th>Durumu</th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        if (item.OrderStatus == 1)
                        {
                            durum = "Açık";
                        }
                        else
                        {
                            durum = "Kapalı";
                        }

                        <tr>
                            <td>@item.OrderId</td>
                            <td>@item.OrderDateTime</td>
                            <td>@item.AmountDue</td>
                            <td>@durum</td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
    <div class="col-md-12 grid-margin transparent">
        <div class="row">
            <div class="col-md-6 mb-4 stretch-card transparent">
                <div class="card card-tale">
                    <div class="card-body">
                        <p class="mb-4">Başarılı Adisyon Sayısı</p>
                        <p class="fs-30 mb-2">@ViewBag.v1</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-4 stretch-card transparent">
                <div class="card card-light-danger">
                    <div class="card-body">
                        <p class="mb-4">Ödemesi Alınan Adisyon Sayısı</p>
                        <p class="fs-30 mb-2">@ViewBag.v2</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-4 stretch-card transparent">
                <div class="card card-light-danger">
                    <div class="card-body">
                        <p class="mb-4">En Pahalı Ürün</p>
                        <p class="fs-30 mb-2">@ViewBag.v11</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-4 stretch-card transparent">
                <div class="card card-dark-blue">
                    <div class="card-body">
                        <p class="mb-4">En Çok Satılan Ürün</p>
                        <p class="fs-30 mb-2">@ViewBag.v12</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 mb-4 mb-lg-0 stretch-card transparent">
                <div class="card card-light-blue">
                    <div class="card-body">
                        <p class="mb-4">Toplam Ürün Satış Sayısı</p>
                        <p class="fs-30 mb-2">@ViewBag.v3</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 stretch-card transparent">
                <div class="card card-tale">
                    <div class="card-body">
                        <p class="mb-4">İptal Olan Adisyon Sayısı</p>
                        <p class="fs-30 mb-2">@ViewBag.v4</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-title">Raporlama Hk.</p>
                <p class="font-weight-500">Detaylı Raporlama İçin Sol Menülerde Bulunan Raporlama Sayfalarına Göz Atarak Datalarınızı Analiz Edebilirsiniz.</p>
            </div>
        </div>
    </div>
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <p class="card-title">Dashboard Sayfası</p>
                </div>
                <p class="font-weight-500">Dashboard Sayfasında Bulunan Widget Bölümlerinden Şubelerde Gerçekleşen Satış Datalarının Özetlerini Görüntüleyebilirsiniz.</p>
            </div>
        </div>
    </div>
</div>

